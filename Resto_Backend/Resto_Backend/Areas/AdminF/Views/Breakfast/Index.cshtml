@model IEnumerable<Breakfast>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Adminf/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
    
}
@if (Model.Count()>0)
{
    

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">BreakFast Table</h4>
                <p class="card-description">
                    <a asp-controller="BreakFast" asp-action="Create" class="btn btn-primary">Create</a>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Count</th>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Desc</th>
                                    <th>Price</th>
                                    <th>Setting</th>
                                </tr>
                            </thead>
                            <tbody>

                                    @foreach (var Model in Model)                                    
                                    {
                                        count++;
                                        <tr>
                                    <td>@count</td>
                                    <td><img style="width:200px;height:50px;" src="~/img/@Model.ImageUrl" /></td>
                                    <td>@Model.Name</td>
                                    <td>@Model.Desc</td>
                                    <td>@Model.Price</td>
                                    <td>
                                        <a class="btn btn-danger" asp-controller="BreakFast" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
                                        <a class="btn btn-dark" asp-controller="BreakFast" asp-action="Update" asp-route-id="@Model.Id">Update</a>
                                        <a class="btn btn-success" asp-controller="BreakFast" asp-action="Detail" asp-route-id="@Model.Id">Detail</a>

                                    </td>
                                </tr>
                                    }

                            </tbody>
                        </table>

                    </div>
            </div>
        </div>
    </div>
</div>
}
else{
     <a asp-controller="BreakFast" asp-action="Create" class="btn btn-primary">Create</a>
    <h1>Bosdu</h1>
}

