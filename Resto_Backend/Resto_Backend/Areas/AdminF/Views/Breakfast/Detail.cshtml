@model Breakfast
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Adminf/Views/Shared/_AdminLayout.cshtml";

}



<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">BreakFast Table</h4>
                <p class="card-description">
                    <a asp-controller="BreakFast" asp-action="Create" class="btn btn-primary">Create</a>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Count</th>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Desc</th>
                                    <th>Price</th>
                                </tr>
                            </thead>
                            <tbody>


                                <tr>
                                    <td><img style="width:200px;height:50px;" src="~/img/@Model.ImageUrl" /></td>
                                    <td>@Model.Name</td>
                                    <td>@Model.Desc</td>
                                    <td>@Model.Price</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
            </div>
        </div>
    </div>
</div>


